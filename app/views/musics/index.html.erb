<div id="banner" class="podcasts_banner">
	<h1>Discover your new Favourite Music</h1>
</div>

<div id="podcasts" class="cf">
	<div class="wrapper">
		<ul class="cf">
			<% @musics.each do |music| %>
				<%= link_to music do %>
					<li>
						<%= image_tag music.thumbnail.url(:medium) %>
						<div class="podcast_overview">
							<h2><%= music.title %></h2>
							<p class="episode_count">1 Episode</p>
						</div>
					</li>
				<% end %>
			<% end %>
		</ul>

		<%= will_paginate @musics, previous_label: "Previous", next_label: "Next" %>
	</div>
</div>