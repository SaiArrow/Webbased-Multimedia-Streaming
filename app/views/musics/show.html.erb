<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<h1><%= @music.title %></h1>
			<p class="description"><%= @music.description %></p>
			<% unless @music.itunes.blank? %>
				<a href="<%= @music.itunes %>" class="subscribe_link">iTunes</a>
			<% end %>
			<% unless @music.stitcher.blank? %>
				<a href="<%= @music.stitcher %>" class="subscribe_link">Stitcher</a>
			<% end %>
			<% unless @music.musicbay.blank? %>
				<a href="<%= @music.musicbay %>" class="subscribe_link">PodBay</a>
			<% end %>
		</div>
	</div>

	<div id="breadcrumb">
		<%= link_to musics_path do %>
			All Musics
			<span>/</span>
			The Flash Music
		<% end %>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @episodes.each do |episode| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<a href="#">
								<%= image_tag episode.episode_thumbnail.url(:medium) %>
							</a>
						</div>
						<div class="episode_overview">
							<h2><%= link_to episode.title, music_episode_path(@music, episode) %></h2>
							<p class="description"><%= truncate(episode.description, length: 160) %></p>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<%= will_paginate @episodes, previous_label: "Previous", next_label: "Next" %>